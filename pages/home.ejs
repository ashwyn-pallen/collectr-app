<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collectr</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="../styles/navbar.css">
    <link rel="stylesheet" href="../styles/cards.css">
</head>
<body class="bg-dark d-flex flex-column min-vh-100">

<%- include('partials/navbar') %>
<br>
<img src="/aboutUsBanner.png" type="image/png" alt="">
<br>
<div class="container mt-4 flex-fill">

<h2 class="mb-4">COLLECTIONS</h2>
<div class="row g-4">
  <% collections.forEach(collection => { %>
    <div class="col-sm-6 col-md-4 col-lg-3">
    <a href="/login" class="text-decoration-none text-reset">
      <div class="card h-100">
        <img src="<%= collection.thumbnailImg || '/placeholder.jpg' %>" class="card-img-top" alt="<%= collection.collectionName %>">
        <div class="card-body">
          <h5 class="card-title"><%= collection.collectionName %> âž­</h5>
          <% if (collection.description) { %>
            <p class="card-text"><%= collection.description %></p>
          <% } %>
        </div>
      </div>
    </a>
    </div>
  <% }) %>
</div>
<br>
<h2 class="mt-5 mb-4">USERS</h2>
<div class="row g-4">
  <% users.forEach(user => { %>
    <div class="col-4 col-sm-3 col-md-2 text-center">
      <img
        src="<%= user.profilePicture || '/default-avatar.png' %>"
        class="rounded-circle img-fluid border border-light"
        alt="<%= user.username %>"
        style="width: 80px; height: 80px; object-fit: cover;"
      >
      <p class="text-white mt-2 mb-0"><%= user.username %></p>
    </div>
  <% }) %>
</div>
</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoYF1A76UQgF0nPEzvF6txjGz9h5SmXKp4YfRvH+AB8C5Kk" crossorigin="anonymous"></script>
</body>
</html>